{
  "title": "From Karabiner-Elements docs",
  "rules": [
    {
      "description": "Double-press âŒ˜Q to quit",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "command-q",
              "value": 1
            }
          ],
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": "left_command"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "command-q",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "shell_command": "osascript -e 'tell application \"BetterTouchTool\" to trigger_named \"Cmd+Q Warning\"'"
              },
              {
                "set_variable": {
                  "name": "command-q",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "command-q",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    }
  ]
}

