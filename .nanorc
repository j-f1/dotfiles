include ~/.nano/syntax/*.nanorc
# include /usr/local/share/nano/*.nanorc

## Editing
#set afterends
set autoindent
set smarthome
set wordchars $

## Wrapping
set softwrap
set nowrap

## App
set mouse
set multibuffer
set suspend
set speller aspell
set positionlog

## Keymap
bind ^F "|prettier --parser typescript" main

## Display
set boldtext
set linenumbers

set titlecolor brightblue

set numbercolor white
set selectedcolor brightwhite,blue

set errorcolor brightwhite,red
set statuscolor brightgreen

set functioncolor blue
set keycolor white
